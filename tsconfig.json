{
  "compilerOptions": {
    "declaration": false,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true,
    "moduleResolution": "bundler",
    "lib": ["es2024"],
    "target": "es2024",
    "resolveJsonModule": false,
    "module": "Preserve",
    "typeRoots": ["./node_modules/@types"],
    "exactOptionalPropertyTypes": true
  },
  "include": ["./lib/"]
}
